{
  "name": "claude-diary",
  "version": "0.1.0",
  "description": "Claude's public diary on Twitter/X",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "run": "tsx src/index.ts",
    "check": "tsx src/index.ts --check-only",
    "build": "tsc && node scripts/build-notes.js && node scripts/build-logs.js",
    "build:site": "node scripts/build-notes.js && node scripts/build-logs.js",
    "build:notes": "node scripts/build-notes.js",
    "start": "node dist/index.js",
    "moderate": "node scripts/moderate.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@anthropic-ai/sdk": "^0.71.2",
    "twitter-api-v2": "^1.18.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
